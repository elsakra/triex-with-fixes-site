---
import BaseLayout from '@/layouts/BaseLayout.astro';
import SectionHeader from '@/components/SectionHeader.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const services = await getCollection('services');
const sortedServices = services.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
const { sections } = siteData;
---

<BaseLayout title="Services">
  <!-- Hero -->
  <section class="pt-28 pb-16 bg-gradient-to-b from-sand-50 to-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <span class="text-sm font-semibold text-primary-600 uppercase tracking-wider">Capabilities</span>
        <h1 class="mt-3 font-display text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 leading-tight">
          {sections.services?.headline || "Capabilities"}
        </h1>
        {sections.services?.description && (
          <p class="mt-6 text-xl text-slate-600 leading-relaxed">
            {sections.services.description}
          </p>
        )}
      </div>
    </div>
  </section>

  <!-- Services List -->
  <section class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-20">
        {sortedServices.map(async (service, index) => {
          const { Content } = await service.render();
          const isEven = index % 2 === 0;
          return (
            <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
              <div class:list={[!isEven && "lg:order-2"]}>
                <span class="inline-flex items-center rounded-full bg-primary-50 border border-primary-100 px-3 py-1 text-xs font-semibold text-primary-700 uppercase tracking-wider mb-4">
                  Capability
                </span>
                <h2 class="font-display text-3xl sm:text-4xl font-bold text-slate-900 leading-tight">
                  {service.data.title}
                </h2>
                {service.data.shortDescription && (
                  <p class="mt-4 text-lg text-slate-600 leading-relaxed">
                    {service.data.shortDescription}
                  </p>
                )}
                
                <div class="mt-6 prose prose-slate max-w-none">
                  <Content />
                </div>
                
                {service.data.features && service.data.features.length > 0 && (
                  <ul class="mt-8 space-y-3">
                    {service.data.features.map((feature) => (
                      <li class="flex items-start gap-3 text-slate-600">
                        <span class="text-slate-400 mt-1.5">â€¢</span>
                        <span>{feature}</span>
                      </li>
                    ))}
                  </ul>
                )}
                
                <div class="mt-8">
                  <Button href={`/services/${service.slug}`} style="outline">
                    Learn more
                  </Button>
                </div>
              </div>
              
              <div class:list={["relative", !isEven && "lg:order-1"]}>
                <div class="aspect-[4/3] rounded-2xl overflow-hidden bg-gradient-to-br from-primary-50 to-accent-50">
                  {service.data.image ? (
                    <img 
                      src={service.data.image} 
                      alt={service.data.title}
                      class="w-full h-full object-cover"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center">
                      <svg class="w-24 h-24 text-primary-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      </svg>
                    </div>
                  )}
                </div>
                <div class:list={[
                  "absolute w-32 h-32 bg-accent-100 rounded-xl -z-10",
                  isEven ? "-bottom-4 -right-4" : "-bottom-4 -left-4"
                ]}></div>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-sand-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl sm:text-4xl font-bold text-slate-900">
        Ready to build momentum?
      </h2>
      <p class="mt-4 text-lg text-slate-600">
        Start with a short conversation. We'll ask a few questions and suggest next steps.
      </p>
      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <Button href="/contact" style="primary" size="lg">
          Get in touch
        </Button>
        <Button href="/portfolio" style="outline" size="lg">
          View our work
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
