---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const faqItems = await getCollection('faq');
const sortedFaqs = faqItems.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
const { company, sections } = siteData;
---

<BaseLayout title={`FAQ - ${company.name}`}>
  <!-- Hero Section -->
  <section class="pt-28 pb-16 bg-gradient-to-b from-sand-50 to-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <span class="text-sm font-semibold text-primary-600 uppercase tracking-wider">FAQ</span>
        <h1 class="mt-3 font-display text-4xl sm:text-5xl font-bold text-slate-900 leading-tight">
          {sections.faq?.headline || "Frequently asked questions"}
        </h1>
        <p class="mt-6 text-xl text-slate-600">
          {sections.faq?.description || "Engagements, timelines, and how we work."}
        </p>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      {sortedFaqs.length > 0 ? (
        <div class="space-y-4">
          {sortedFaqs.map(async (faq, index) => {
            const { Content } = await faq.render();
            return (
              <details 
                class="group bg-sand-50 border border-slate-100 rounded-xl overflow-hidden"
                open={index === 0}
              >
                <summary class="flex items-center justify-between p-6 cursor-pointer list-none hover:bg-sand-100/50 transition-colors">
                  <h3 class="font-display text-lg font-semibold text-slate-900 pr-8">
                    {faq.data.question}
                  </h3>
                  <svg 
                    class="w-5 h-5 text-slate-400 flex-shrink-0 transition-transform group-open:rotate-180" 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                  </svg>
                </summary>
                <div class="px-6 pb-6 border-t border-slate-100 prose prose-slate max-w-none pt-4">
                  <Content />
                </div>
              </details>
            );
          })}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="mx-auto w-16 h-16 text-slate-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="mt-4 font-display text-xl font-bold text-slate-900">No FAQs yet</h3>
          <p class="mt-2 text-slate-600">Check back soon or contact us directly.</p>
        </div>
      )}
    </div>
  </section>

  <!-- Contact CTA -->
  <section class="py-16 bg-sand-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl font-bold text-slate-900 mb-4">
        Still have questions?
      </h2>
      <p class="text-slate-600 mb-8 max-w-2xl mx-auto">
        We're happy to answer any questions about our approach, engagements, or how we might work together.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <Button href="/contact" style="primary" size="lg">
          Get in touch
        </Button>
        <Button href="/services" style="outline" size="lg">
          View our capabilities
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
