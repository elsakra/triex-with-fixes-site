---
import BaseLayout from '@/layouts/BaseLayout.astro';
import SectionHeader from '@/components/SectionHeader.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const team = await getCollection('team');
const sortedTeam = team.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
const { sections } = siteData;
---

<BaseLayout title="Team">
  <!-- Hero -->
  <section class="pt-28 pb-16 bg-gradient-to-b from-sand-50 to-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <span class="text-sm font-semibold text-primary-600 uppercase tracking-wider">Team</span>
        <h1 class="mt-3 font-display text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 leading-tight">
          {sections.team?.headline || "Leadership"}
        </h1>
        {sections.team?.description && (
          <p class="mt-6 text-xl text-slate-600 leading-relaxed">
            {sections.team.description}
          </p>
        )}
      </div>
    </div>
  </section>

  <!-- Team Grid -->
  <section class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      {sortedTeam.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10">
          {sortedTeam.map(async (member) => {
            const { Content } = await member.render();
            return (
              <div class="bg-sand-50 rounded-2xl overflow-hidden">
                <div class="aspect-[4/3] overflow-hidden bg-gradient-to-br from-primary-50 to-accent-50">
                  {member.data.image ? (
                    <img 
                      src={member.data.image} 
                      alt={member.data.name}
                      class="w-full h-full object-cover"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center">
                      <svg class="w-24 h-24 text-primary-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                    </div>
                  )}
                </div>
                <div class="p-6">
                  <h2 class="font-display text-xl font-bold text-slate-900">
                    {member.data.name}
                  </h2>
                  <p class="mt-1 text-primary-600 font-medium">{member.data.role}</p>
                  {member.data.location && (
                    <p class="mt-1 text-sm text-slate-500 flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                      {member.data.location}
                    </p>
                  )}
                  
                  {member.data.bio && (
                    <p class="mt-4 text-slate-600 text-sm leading-relaxed">
                      {member.data.bio}
                    </p>
                  )}
                  
                  {member.body && member.body.trim() && (
                    <div class="mt-4 text-slate-600 text-sm leading-relaxed prose prose-sm prose-slate">
                      <Content />
                    </div>
                  )}
                  
                  <div class="mt-5 flex gap-3">
                    {member.data.email && (
                      <a 
                        href={`mailto:${member.data.email}`}
                        class="inline-flex items-center gap-2 text-sm text-slate-500 hover:text-primary-600 transition-colors"
                      >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                        Email
                      </a>
                    )}
                    {member.data.linkedin && (
                      <a 
                        href={member.data.linkedin}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-2 text-sm text-slate-500 hover:text-primary-600 transition-colors"
                      >
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                        </svg>
                        LinkedIn
                      </a>
                    )}
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="mx-auto w-16 h-16 text-slate-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <h3 class="mt-4 font-display text-xl font-bold text-slate-900">Team coming soon</h3>
          <p class="mt-2 text-slate-600">Check back soon to meet our team.</p>
        </div>
      )}
    </div>
  </section>

  <!-- Values / Culture Section -->
  <section class="py-20 bg-sand-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-display text-3xl sm:text-4xl font-bold text-slate-900">
          How we work
        </h2>
        <p class="mt-4 text-lg text-slate-600">
          We're a small, senior team that values depth over breadth. Every engagement gets direct access to experienced advisorsâ€”no handoffs, no junior associates.
        </p>
      </div>
      
      <div class="mt-14 grid md:grid-cols-3 gap-8">
        <div class="bg-white rounded-2xl p-8 text-center">
          <div class="mx-auto w-14 h-14 bg-primary-100 rounded-full flex items-center justify-center mb-5">
            <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <h3 class="font-display text-lg font-bold text-slate-900">Senior Team</h3>
          <p class="mt-2 text-slate-600 text-sm">
            Direct access to experienced advisors on every engagement.
          </p>
        </div>
        <div class="bg-white rounded-2xl p-8 text-center">
          <div class="mx-auto w-14 h-14 bg-primary-100 rounded-full flex items-center justify-center mb-5">
            <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
          <h3 class="font-display text-lg font-bold text-slate-900">Collaborative</h3>
          <p class="mt-2 text-slate-600 text-sm">
            We work alongside your team, not in isolation.
          </p>
        </div>
        <div class="bg-white rounded-2xl p-8 text-center">
          <div class="mx-auto w-14 h-14 bg-primary-100 rounded-full flex items-center justify-center mb-5">
            <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="font-display text-lg font-bold text-slate-900">Accountable</h3>
          <p class="mt-2 text-slate-600 text-sm">
            We measure success by your outcomes, not our outputs.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl sm:text-4xl font-bold text-white">
        Want to work with us?
      </h2>
      <p class="mt-4 text-lg text-primary-100">
        Let's talk about what you're building.
      </p>
      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <Button href="/contact" style="white" size="lg">
          Get in touch
        </Button>
        <Button href="/portfolio" style="ghost" size="lg" class="text-white hover:bg-white/10">
          View our work
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
