---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const faqs = await getCollection('faq');
const sortedFaqs = faqs.sort((a, b) => (a.data.order || 0) - (b.data.order || 0)).slice(0, 5);
const { sections, company } = siteData;
---

<BaseLayout title="Contact Us">
  <!-- Hero -->
  <section class="pt-28 pb-16 bg-gradient-to-b from-sand-50 to-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <span class="text-sm font-semibold text-primary-600 uppercase tracking-wider">Contact</span>
        <h1 class="mt-3 font-display text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 leading-tight">
          {sections.contact?.headline || "Let's talk"}
        </h1>
        {sections.contact?.description && (
          <p class="mt-6 text-xl text-slate-600 leading-relaxed">
            {sections.contact.description}
          </p>
        )}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20">
        <!-- Contact Form -->
        <div class="bg-sand-50 rounded-2xl p-8 lg:p-10">
          <h2 class="font-display text-2xl font-bold text-slate-900 mb-2">
            Start a conversation
          </h2>
          <p class="text-slate-600 mb-8">
            Tell us about your business. We'll respond within one business day.
          </p>
          
          <form class="space-y-6" action="#" method="POST">
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-slate-700 mb-2">
                  First Name *
                </label>
                <input 
                  type="text" 
                  id="firstName" 
                  name="firstName"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-slate-200 bg-white text-slate-900 placeholder:text-slate-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-100 outline-none transition-colors"
                />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-slate-700 mb-2">
                  Last Name *
                </label>
                <input 
                  type="text" 
                  id="lastName" 
                  name="lastName"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-slate-200 bg-white text-slate-900 placeholder:text-slate-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-100 outline-none transition-colors"
                />
              </div>
            </div>
            
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="email" class="block text-sm font-medium text-slate-700 mb-2">
                  Email *
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-slate-200 bg-white text-slate-900 placeholder:text-slate-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-100 outline-none transition-colors"
                />
              </div>
              <div>
                <label for="companyName" class="block text-sm font-medium text-slate-700 mb-2">
                  Company
                </label>
                <input 
                  type="text"
                  id="companyName"
                  name="companyName"
                  class="w-full px-4 py-3 rounded-lg border border-slate-200 bg-white text-slate-900 placeholder:text-slate-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-100 outline-none transition-colors"
                />
              </div>
            </div>
            
            <div>
              <label for="interest" class="block text-sm font-medium text-slate-700 mb-2">
                What are you interested in?
              </label>
              <select 
                id="interest" 
                name="interest"
                class="w-full px-4 py-3 rounded-lg border border-slate-200 bg-white text-slate-900 focus:border-primary-500 focus:ring-2 focus:ring-primary-100 outline-none transition-colors"
              >
                <option value="">Select a topic</option>
                <option value="strategy">Strategy engagement</option>
                <option value="operating-system">Operating system work</option>
                <option value="narrative">Narrative & positioning</option>
                <option value="general">General inquiry</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-slate-700 mb-2">
                Tell us about your situation
              </label>
              <textarea 
                id="message" 
                name="message"
                rows="4"
                class="w-full px-4 py-3 rounded-lg border border-slate-200 bg-white text-slate-900 placeholder:text-slate-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-100 outline-none transition-colors resize-none"
                placeholder="What are you working on? What challenges are you facing?"
              ></textarea>
            </div>
            
            <Button style="primary" size="lg" class="w-full">
              Send message
            </Button>
            
            <p class="text-xs text-slate-500 text-center">
              By submitting, you agree to our <a href="/privacy" class="text-primary-600 hover:underline">privacy policy</a>.
            </p>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div>
          <h2 class="font-display text-2xl font-bold text-slate-900 mb-8">
            Get in touch
          </h2>
          
          <div class="space-y-6">
            <!-- Email -->
            <div class="bg-sand-50 rounded-xl p-6">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900">Email</h3>
                  <a href={`mailto:${company.email}`} class="mt-1 text-primary-600 hover:underline">
                    {company.email}
                  </a>
                  <p class="text-sm text-slate-500 mt-1">We typically reply within 1 business day.</p>
                </div>
              </div>
            </div>
            
            <!-- Phone -->
            {company.phone && (
              <div class="bg-sand-50 rounded-xl p-6">
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-slate-900">Phone</h3>
                    <a href={`tel:${company.phone}`} class="mt-1 text-primary-600 hover:underline">
                      {company.phone}
                    </a>
                  </div>
                </div>
              </div>
            )}
            
            <!-- Work with us -->
            <div class="bg-primary-50 border border-primary-100 rounded-xl p-6">
              <h3 class="font-semibold text-slate-900">Interested in an engagement?</h3>
              <p class="mt-2 text-slate-600 text-sm">
                We start every relationship with a short conversation. Tell us what you're working on and we'll suggest next steps.
              </p>
              <div class="mt-4 flex gap-3">
                <Button href="/portfolio" style="outline" class="border-primary-200">
                  View our work
                </Button>
                <Button href="/services" style="ghost" class="text-primary-700">
                  Our capabilities
                </Button>
              </div>
            </div>
          </div>
          
          <!-- FAQ Preview -->
          {sortedFaqs.length > 0 && (
            <div class="mt-12">
              <h3 class="font-display text-xl font-bold text-slate-900 mb-6">
                Frequently asked questions
              </h3>
              <div class="space-y-3">
                {sortedFaqs.map(async (faq) => {
                  const { Content } = await faq.render();
                  return (
                    <details class="group bg-sand-50 rounded-xl">
                      <summary class="flex items-center justify-between cursor-pointer p-4 text-left">
                        <span class="font-medium text-slate-900 pr-4">
                          {faq.data.question}
                        </span>
                        <span class="flex-shrink-0">
                          <svg class="w-5 h-5 text-slate-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                          </svg>
                        </span>
                      </summary>
                      <div class="px-4 pb-4 text-slate-600 text-sm prose prose-sm prose-slate">
                        <Content />
                      </div>
                    </details>
                  );
                })}
              </div>
              <div class="mt-4">
                <a href="/faq" class="text-sm font-medium text-primary-600 hover:underline">
                  View all FAQs â†’
                </a>
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
