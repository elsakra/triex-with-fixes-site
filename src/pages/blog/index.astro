---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime()
);
const { sections } = siteData;
---

<BaseLayout title="Insights">
  <!-- Hero -->
  <section class="pt-28 pb-16 bg-gradient-to-b from-sand-50 to-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <span class="text-sm font-semibold text-primary-600 uppercase tracking-wider">Insights</span>
        <h1 class="mt-3 font-display text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 leading-tight">
          {sections.blog?.headline || "Insights"}
        </h1>
        <p class="mt-6 text-xl text-slate-600 leading-relaxed">
          {sections.blog?.description || "Notes on strategy, operating cadence, and what it takes to compound."}
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Grid -->
  <section class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      {sortedPosts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post) => (
            <article class="bg-sand-50 rounded-2xl overflow-hidden hover:shadow-lg transition-shadow duration-300">
              {post.data.image && (
                <a href={`/blog/${post.slug}`} class="block aspect-[16/9] overflow-hidden">
                  <img 
                    src={post.data.image} 
                    alt={post.data.title}
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                  />
                </a>
              )}
              <div class="p-6">
                <div class="flex items-center gap-3 text-sm text-slate-500 mb-3">
                  <time datetime={post.data.publishedAt}>
                    {new Date(post.data.publishedAt).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  {post.data.category && (
                    <>
                      <span class="text-slate-300">â€¢</span>
                      <span class="text-primary-600">{post.data.category}</span>
                    </>
                  )}
                </div>
                <h2 class="font-display text-xl font-bold text-slate-900">
                  <a href={`/blog/${post.slug}`} class="hover:text-primary-700 transition-colors">
                    {post.data.title}
                  </a>
                </h2>
                <p class="mt-3 text-slate-600 text-sm leading-relaxed line-clamp-3">
                  {post.data.excerpt}
                </p>
                <a 
                  href={`/blog/${post.slug}`}
                  class="mt-4 inline-flex items-center text-primary-600 font-medium text-sm hover:text-primary-700"
                >
                  Read more
                  <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="mx-auto w-16 h-16 text-slate-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
          <h3 class="mt-4 font-display text-xl font-bold text-slate-900">No posts yet</h3>
          <p class="mt-2 text-slate-600">Check back soon for insights.</p>
        </div>
      )}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-sand-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl sm:text-4xl font-bold text-slate-900">
        Want to learn more?
      </h2>
      <p class="mt-4 text-lg text-slate-600">
        Explore our work or get in touch to start a conversation.
      </p>
      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <Button href="/portfolio" style="primary" size="lg">
          View our work
        </Button>
        <Button href="/contact" style="outline" size="lg">
          Get in touch
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
