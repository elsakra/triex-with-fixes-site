---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import SectionHeader from '@/components/SectionHeader.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const portfolio = await getCollection('portfolio');
  return portfolio.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();

// Get other projects for related section
const allProjects = await getCollection('portfolio');
const relatedProjects = allProjects
  .filter(p => p.slug !== project.slug)
  .sort((a, b) => (a.data.order || 0) - (b.data.order || 0))
  .slice(0, 2);
---

<BaseLayout title={project.data.title} description={project.data.excerpt}>
  <!-- Hero -->
  <section class="pt-28 pb-16 bg-gradient-to-b from-sand-50 to-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <div class="flex items-center gap-2 text-sm text-slate-500 mb-8">
        <a href="/portfolio" class="hover:text-primary-600 transition-colors">Work</a>
        <span class="text-slate-300">/</span>
        <span class="text-slate-700">{project.data.title}</span>
      </div>
      
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <div>
          <div class="flex items-center gap-3 mb-4">
            {project.data.industry && (
              <span class="text-xs font-semibold text-primary-600 uppercase tracking-wider">
                {project.data.industry}
              </span>
            )}
          </div>
          
          <h1 class="font-display text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-900 leading-tight">
            {project.data.title}
          </h1>
          
          <p class="mt-6 text-xl text-slate-600 leading-relaxed">
            {project.data.excerpt}
          </p>
          
          {project.data.client && (
            <div class="mt-8 pt-8 border-t border-slate-200">
              <p class="text-sm text-slate-500 uppercase tracking-wider mb-1">Client</p>
              <p class="font-semibold text-slate-900">{project.data.client}</p>
            </div>
          )}
          
          {project.data.services && project.data.services.length > 0 && (
            <div class="mt-6">
              <p class="text-sm text-slate-500 uppercase tracking-wider mb-2">Services</p>
              <div class="flex flex-wrap gap-2">
                {project.data.services.map((service) => (
                  <span class="inline-flex items-center rounded-full bg-primary-50 border border-primary-100 px-3 py-1 text-sm text-primary-700">
                    {service}
                  </span>
                ))}
              </div>
            </div>
          )}
        </div>
        
        <div class="relative">
          <div class="aspect-[4/3] rounded-2xl overflow-hidden bg-gradient-to-br from-slate-100 to-slate-50">
            {project.data.coverImage ? (
              <img 
                src={project.data.coverImage} 
                alt={project.data.title}
                class="w-full h-full object-cover"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center">
                <svg class="w-24 h-24 text-slate-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Results Section -->
  {project.data.results && project.data.results.length > 0 && (
    <section class="py-16 bg-white border-t border-slate-100">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="font-display text-2xl font-bold text-slate-900 mb-8">Results</h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {project.data.results.map((result) => (
            <div class="bg-sand-50 rounded-xl p-6">
              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p class="text-slate-700 leading-relaxed">{result}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Main Content -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="prose prose-slate prose-lg max-w-none prose-headings:font-display prose-headings:text-slate-900 prose-a:text-primary-600 prose-a:no-underline hover:prose-a:underline">
        <Content />
      </div>
    </div>
  </section>

  <!-- Related Projects -->
  {relatedProjects.length > 0 && (
    <section class="py-20 bg-sand-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <SectionHeader 
          headline="More work" 
          description="Explore other examples of how we help clients succeed."
        />
        
        <div class="mt-12 grid md:grid-cols-2 gap-10">
          {relatedProjects.map((related) => (
            <a href={`/portfolio/${related.slug}`} class="group block">
              <div class="aspect-[16/10] rounded-2xl overflow-hidden bg-gradient-to-br from-slate-100 to-slate-50 mb-5">
                {related.data.coverImage ? (
                  <img 
                    src={related.data.coverImage} 
                    alt={related.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center">
                    <svg class="w-16 h-16 text-slate-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                  </div>
                )}
              </div>
              <h3 class="font-display text-xl font-bold text-slate-900 group-hover:text-primary-700 transition-colors">
                {related.data.title}
              </h3>
              <p class="mt-2 text-slate-600 line-clamp-2">
                {related.data.excerpt}
              </p>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA -->
  <section class="py-20 bg-primary-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl sm:text-4xl font-bold text-white">
        Ready to build your own success story?
      </h2>
      <p class="mt-4 text-lg text-primary-100">
        Let's talk about what you're building.
      </p>
      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <Button href="/contact" style="white" size="lg">
          Start a conversation
        </Button>
        <Button href="/portfolio" style="ghost" size="lg" class="text-white hover:bg-white/10">
          View all work
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
