---
/**
 * Abstract architectural/geometric visual for consulting hero
 * Inspired by Echo Street Capital's 3D illustration aesthetic
 */
---

<div class="relative w-full aspect-[4/3] lg:aspect-square">
  <!-- Soft glow backdrop -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-100/40 via-transparent to-accent-100/30 rounded-3xl"></div>
  
  <!-- Abstract geometric composition -->
  <svg 
    viewBox="0 0 400 400" 
    class="w-full h-full"
    aria-hidden="true"
  >
    <defs>
      <!-- Gradient definitions -->
      <linearGradient id="glass1" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#E7EDF4;stop-opacity:0.9" />
        <stop offset="100%" style="stop-color:#D1DBE8;stop-opacity:0.7" />
      </linearGradient>
      <linearGradient id="glass2" x1="0%" y1="100%" x2="100%" y2="0%">
        <stop offset="0%" style="stop-color:#F7F8FA;stop-opacity:0.95" />
        <stop offset="100%" style="stop-color:#E7EDF4;stop-opacity:0.8" />
      </linearGradient>
      <linearGradient id="accent1" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#4F7184;stop-opacity:0.2" />
        <stop offset="100%" style="stop-color:#3C5867;stop-opacity:0.3" />
      </linearGradient>
      <linearGradient id="shadow1" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" style="stop-color:#0F1A26;stop-opacity:0.08" />
        <stop offset="100%" style="stop-color:#0F1A26;stop-opacity:0.02" />
      </linearGradient>
      
      <!-- Filter for soft shadows -->
      <filter id="softShadow" x="-20%" y="-20%" width="140%" height="140%">
        <feDropShadow dx="0" dy="8" stdDeviation="12" flood-color="#0F1A26" flood-opacity="0.1"/>
      </filter>
      <filter id="subtleShadow" x="-20%" y="-20%" width="140%" height="140%">
        <feDropShadow dx="0" dy="4" stdDeviation="6" flood-color="#0F1A26" flood-opacity="0.06"/>
      </filter>
    </defs>
    
    <!-- Background shapes -->
    <circle cx="320" cy="80" r="60" fill="url(#accent1)" opacity="0.4"/>
    <circle cx="80" cy="340" r="45" fill="url(#accent1)" opacity="0.3"/>
    
    <!-- Main architectural block - building base -->
    <g filter="url(#softShadow)">
      <path 
        d="M100 280 L100 160 L180 120 L260 160 L260 280 L100 280" 
        fill="url(#glass2)"
        stroke="#D6DCE3"
        stroke-width="1"
      />
    </g>
    
    <!-- Floating platform -->
    <g filter="url(#subtleShadow)">
      <polygon 
        points="140,200 280,140 340,180 200,240" 
        fill="url(#glass1)"
        stroke="#B7C1CC"
        stroke-width="0.5"
      />
    </g>
    
    <!-- Upper building mass -->
    <g filter="url(#softShadow)">
      <path 
        d="M160 180 L160 100 L220 70 L280 100 L280 180 L160 180" 
        fill="url(#glass2)"
        stroke="#D6DCE3"
        stroke-width="1"
      />
      <!-- Windows -->
      <rect x="175" y="110" width="25" height="30" fill="url(#accent1)" rx="2"/>
      <rect x="210" y="110" width="25" height="30" fill="url(#accent1)" rx="2"/>
      <rect x="245" y="110" width="25" height="30" fill="url(#accent1)" rx="2"/>
      <rect x="175" y="145" width="25" height="25" fill="url(#accent1)" rx="2"/>
      <rect x="210" y="145" width="25" height="25" fill="url(#accent1)" rx="2"/>
    </g>
    
    <!-- Accent block -->
    <g filter="url(#subtleShadow)">
      <rect 
        x="290" y="200" width="60" height="80" 
        fill="url(#glass1)"
        stroke="#B7C1CC"
        stroke-width="0.5"
        rx="4"
      />
      <rect x="300" y="215" width="40" height="15" fill="url(#accent1)" rx="2"/>
      <rect x="300" y="240" width="40" height="15" fill="url(#accent1)" rx="2"/>
      <rect x="300" y="265" width="40" height="8" fill="url(#accent1)" rx="2"/>
    </g>
    
    <!-- Trees/organic elements -->
    <g opacity="0.7">
      <ellipse cx="70" cy="270" rx="20" ry="30" fill="#95AFC1"/>
      <ellipse cx="60" cy="260" rx="15" ry="22" fill="#B9CAD7"/>
      <ellipse cx="340" cy="300" rx="18" ry="25" fill="#95AFC1"/>
      <ellipse cx="355" cy="295" rx="12" ry="18" fill="#B9CAD7"/>
    </g>
    
    <!-- Decorative lines -->
    <line x1="50" y1="320" x2="350" y2="320" stroke="#D6DCE3" stroke-width="0.5" stroke-dasharray="4,4"/>
    <line x1="70" y1="340" x2="330" y2="340" stroke="#E6E8E2" stroke-width="0.5"/>
    
    <!-- Small floating elements -->
    <circle cx="320" cy="160" r="8" fill="#E7EDF4" stroke="#D1DBE8" stroke-width="1"/>
    <circle cx="100" cy="100" r="6" fill="#F7F8FA" stroke="#E6E8E2" stroke-width="1"/>
    <rect x="330" y="250" width="12" height="12" fill="#F3F4F1" stroke="#D3D6CD" stroke-width="0.5" rx="2"/>
  </svg>
  
  <!-- Subtle animated elements -->
  <div class="absolute top-8 right-12 w-3 h-3 rounded-full bg-accent-300/40 animate-pulse"></div>
  <div class="absolute bottom-16 left-8 w-2 h-2 rounded-full bg-primary-300/30 animate-pulse" style="animation-delay: 1s;"></div>
</div>
